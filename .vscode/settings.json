{
	"editor.insertSpaces": false, // Use tabs instead of spaces
	"editor.tabSize": 4, // Set the number of spaces per tab (commonly 2 or 4)
	"editor.detectIndentation": false, // Prevent VSCode from automatically detecting indentation
	"editor.formatOnSave": true, // Automatically format on save
	"editor.defaultFormatter": "esbenp.prettier-vscode", // Use Prettier as the default formatter
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	}
}
